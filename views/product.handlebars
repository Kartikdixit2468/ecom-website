
<link rel="stylesheet" href="/css/product_page_style.css">

<div class="product-details">

<div class = "card-wrapper">
  <div class = "card">
    <!-- card left -->
    <div class = "product-imgs">
      <div class = "img-display">
        <div class = "img-showcase">
          <img src = "{{product.image1}}" alt = "dress image">
          <img src = "{{product.image2}}" alt = "dress image">
          <img src = "/images/product_img.png" alt = "dress image">
          <img src = "/images/product_img2.png" alt = "dress image">
        </div>
      </div>
      <div class = "img-select">
        <div class = "img-item">
          <a href = "#" data-id = "1">
          <img src = "{{product.image1}}" alt = "dress image">
          </a>
        </div>
        <div class = "img-item">
          <a href = "#" data-id = "2">
          <img src = "{{product.image2}}" alt = "dress image">
          </a>
        </div>
        <div class = "img-item">
          <a href = "#" data-id = "3">
            <img src = "/images/product_img.png" alt = "shoe image">
          </a>
        </div>
        <div class = "img-item">
          <a href = "#" data-id = "4">
            <img src = "/images/product_img2.png" alt = "shoe image">
          </a>
        </div>
      </div>
    </div>
    <!-- card right -->
    <div class = "product-content">
      <h2 class = "product-title">{{product.title}}</h2>
      {{!-- <a href = "#" class = "product-link">visit link to our collection</a> --}}
      <div class = "product-rating">
        <i class = "fas fa-star"></i>
        <i class = "fas fa-star"></i>
        <i class = "fas fa-star"></i>
        <i class = "fas fa-star"></i>
        <i class = "fas fa-star-half-alt"></i>
        <span>4.7(21)</span>
      </div>

      <div class = "product-price">
        <p class = "last-price">Old Price: <span>₹{{product.mrp}}.00</span></p>
        <p class = "new-price">New Price: <span>₹{{product.price}} ({{product.discount}}%)</span></p>
      </div>

      <div class = "product-detail">
        <h2>about this item: </h2>
        <p> {{product.description}} </p>
        <ul>
          <li>Color: <span>{{product.color}}</span></li>
          {{#if (eq product.out_of_stock 0)}}
            <li class="stock-product">Available: <span>in stock</span></li>
          {{else}}
            <li class="out-stock-product">Unavailable: <span>Out of stock</span></li>
          {{/if}}

          <li>Category: <span>Krishna Dress</span></li>
          <li>Shipping Area: <span>All over the India</span></li>
          <li>Shipping Fee: <span>₹100</span></li>
        </ul>
      </div>

      <div class = "purchase-info">
        <input type = "number" min = "0" value = "1">
        <button type = "button" class = "btn">
          Add to Cart <i class = "fas fa-shopping-cart"></i>
        </button>
        <button type = "button" class = "btn">Buy Now</button>
      </div>

      <div class = "social-links">
        <p>Share At: </p>
        <a href = "#">
          <i class = "fab fa-facebook-f"></i>
        </a>
        <a href = "#">
          <i class = "fab fa-twitter"></i>
        </a>
        <a href = "#">
          <i class = "fab fa-instagram"></i>
        </a>
        <a href = "#">
          <i class = "fab fa-whatsapp"></i>
        </a>
        <a href = "#">
          <i class = "fab fa-pinterest"></i>
        </a>
      </div>
    </div>
  </div>
</div>
</div>

<script src="/js/product.js"></script>
